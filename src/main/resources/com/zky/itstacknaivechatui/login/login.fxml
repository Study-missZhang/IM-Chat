<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!--登录页面-->
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<Pane id="login" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefWidth="540" prefHeight="415" stylesheets="@css/login.css"
      xmlns="http://javafx.com/javafx/8.0.121"
      xmlns:fx="http://javafx.com/fxml/1">

    <!--主题-->
    <Pane id="operation" prefWidth="540" prefHeight="158">
        <children>
            <Label id="login_logo" styleClass="logo" layoutX="10" layoutY="5" prefWidth="200" prefHeight="15" text="小猪仔乐园" style="-fx-text-fill:#666666;"/>
            <Button id="login_min" styleClass="min" layoutX="454" prefWidth="43" prefHeight="32"/>
            <Button id="login_close" styleClass="close" layoutX="497" prefWidth="43" prefHeight="32"/>
        </children>
    </Pane>

    <!--头像-->
    <Pane id="headImg" layoutX="80" layoutY="200" prefWidth="100" prefHeight="100"/>

    <!--输入框-->
    <TextField id="user_id" layoutX="200" layoutY="200" prefWidth="250" prefHeight="45" promptText="账号">
        <padding>
            <Insets left="10"/>
        </padding>
    </TextField>

    <PasswordField id="userPassword" layoutX="200" layoutY="255" prefWidth="250" prefHeight="45" promptText="密码">
        <padding>
            <Insets left="10"/>
        </padding>
    </PasswordField>

    <!--登录按钮-->
    <Button id="login_button" styleClass="login_button" layoutX="200" layoutY="345" prefWidth="250" prefHeight="45" text="登 录"/>

    <!--版本-->
    <Label id="slogan" layoutX="5" layoutY="398" prefWidth="400" prefHeight="15" text="v1.0 张开元">
        <font>
            <Font size="12"/>
        </font>
    </Label>
</Pane>